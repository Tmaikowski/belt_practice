<h1>Edit</h1>

<%= form_for @event, url: { action: 'update' } do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div><br>
  <div>
    <%= f.label :event_date %>
    <%= f.date_field :event_date %>
  </div><br>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div><br>
  <%= f.select(:state, options_for_select([
    ['TX', 'TX'],
    ['CA', 'CA'],
    ['WA', 'WA'],
    ['NY', 'NY']
  ], @event.state)) %>
</div><br>
<div>
  <p><%= f.submit 'Update Event' %></p>
</div>
<% end %>
